<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.common.widget.i18n.I18nEditText
            android:id="@+id/et_clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10pt"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLines="1"
            android:minHeight="40pt"
            android:singleLine="true"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textHint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_show"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_show"
            android:layout_width="36pt"
            android:layout_height="36pt"
            android:padding="10pt"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_password_hide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_clear"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/textPrimary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
