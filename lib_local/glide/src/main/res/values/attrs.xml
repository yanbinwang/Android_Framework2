<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GifImageView">
        <!-- 对齐系统 src 格式：支持本地资源引用 + 颜色值 -->
        <attr name="gifSrc" format="reference|color"/>
        <!-- 网络 GIF 地址，保持字符串类型 -->
        <attr name="gifUrl" format="string"/>
    </declare-styleable>

</resources>