<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义换行容器 -->
    <declare-styleable name="WordWrapLayout">
        <attr name="paddingChildStart" format="integer" />
        <attr name="paddingChildTop" format="integer" />
        <attr name="paddingChildEnd" format="integer" />
        <attr name="paddingChildBottom" format="integer" />
        <attr name="marginChild" format="integer" />
    </declare-styleable>

    <!-- 自定义XRecyclerView -->
    <declare-styleable name="XRecyclerView">
        <!-- recyclerview的类型 -->
        <attr name="refresh">
            <enum name="ordinary" value="0" />
            <enum name="equipped" value="1" />
        </attr>
        <attr name="empty">
            <enum name="ordinary" value="0" />
            <enum name="equipped" value="1" />
        </attr>
    </declare-styleable>

    <!-- 删除按钮edittext -->
    <declare-styleable name="ClearEditText">
        <attr name="android:minHeight" />
        <attr name="text" />
        <attr name="hint" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="textColorHint" />
        <attr name="maxLength" />
        <attr name="minLine" />
        <attr name="maxLine" />
        <attr name="gravity" />
        <attr name="inputType" />
        <attr name="imeOptions" />
        <attr name="disabled" format="boolean" />
        <attr name="clearBtnImage" format="reference" />
    </declare-styleable>

    <!-- 显影按钮edittext -->
    <declare-styleable name="PasswordEditText">
        <attr name="text" />
        <attr name="hint" />
        <attr name="textSize" />
        <attr name="maxLength" />
        <attr name="textColor" />
        <attr name="textColorHint" />
        <attr name="gravity" />
        <attr name="imeOptions" />
        <attr name="btnImageHide" format="reference" />
        <attr name="btnImageShow" format="reference" />
    </declare-styleable>

    <!-- 全局edittext属性 -->
    <declare-styleable name="BaseEditText">
        <attr name="android:minHeight" />
        <attr name="text" format="reference" />
        <attr name="hint" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textColorHint" format="color" />
        <attr name="maxLength" format="integer" />
        <attr name="minLine" format="integer" />
        <attr name="maxLine" format="integer" />
        <attr name="gravity" format="flags">
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
            <flag name="top" value="48" />
            <flag name="bottom" value="80" />
            <flag name="center_vertical" value="16" />
            <flag name="center_horizontal" value="1" />
            <flag name="center" value="17" />
        </attr>
        <attr name="inputType" format="enum">
            <enum name="text" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="phone" value="2" />
            <enum name="number" value="3" />
            <enum name="numberDecimal" value="4" />
            <enum name="email" value="5" />
            <enum name="textVisiblePassword" value="6" />
            <enum name="money" value="7" />
            <enum name="idcard" value="8" />
            <enum name="rate" value="9" />
        </attr>
        <attr name="imeOptions" format="enum">
            <enum name="actionDone" value="0" />
            <enum name="actionGo" value="1" />
            <enum name="actionNext" value="2" />
            <enum name="actionNone" value="3" />
            <enum name="actionPrevious" value="4" />
            <enum name="actionSearch" value="5" />
            <enum name="actionSend" value="6" />
            <enum name="actionUnspecified" value="7" />
        </attr>
    </declare-styleable>

</resources>