    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_funds_bg"
            android:layout_width="match_parent"
            android:layout_height="164pt"
            android:scaleType="fitXY" />

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableLoadMore="false"
            app:srlEnableRefresh="true">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_funds"
                        android:layout_width="match_parent"
                        android:layout_height="164pt"
                        android:orientation="vertical"
                        android:paddingHorizontal="15pt">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:text="Total assets converted(USDT)"
                            android:textColor="@color/grey_a8a5a5"
                            android:textSize="12pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2pt"
                            android:text="232,232,212.00"
                            android:textColor="@color/grey_333333"
                            android:textSize="28pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3pt"
                            android:text="≈ ₹0.00"
                            android:textColor="@color/grey_a8a5a5"
                            android:textSize="15pt" />

                        <View
                            android:id="@+id/view_content"
                            android:layout_width="match_parent"
                            android:layout_height="38pt"
                            android:layout_marginTop="15pt"
                            android:background="@color/blue_1566ec" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            text="@{`sadasdsadasdasdas`}"
                            android:layout_width="match_parent"
                            android:layout_height="800pt"
                            android:background="@color/blue_2e60df"
                            android:gravity="center"
                            android:textColor="@color/textWhite"
                            android:textSize="29pt"
                            android:visibility="gone" />

                        <com.example.common.widget.i18n.I18nTextView
                            android:layout_width="match_parent"
                            android:layout_height="800pt"
                            android:gravity="center"
                            android:text="@string/refresh"
                            android:textColor="@color/blue_2e60df"
                            android:textSize="29pt" />

                        <ImageView
                            android:id="@+id/iv_arrow"
                            android:layout_width="24pt"
                            android:layout_height="10pt"
                            android:layout_gravity="center"
                            android:src="@mipmap/ic_arrow_down"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    </FrameLayout>

</layout>
