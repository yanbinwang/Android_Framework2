<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="adapter"
            type="com.example.debugging.adapter.ListSelectAdapter" />
    </data>

    <FrameLayout
        android:layout_width="284pt"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="30pt">

        <com.example.common.widget.xrecyclerview.XRecyclerView
            android:id="@+id/xrv_list"
            quick_adapter="@{adapter}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_default" />

    </FrameLayout>

</layout>