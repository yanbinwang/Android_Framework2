<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="event"
            type="com.example.mvvm.activity.MainActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_test"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="40mm"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60mm"
            android:layout_margin="20mm"
            android:background="@color/grey_9f9f9f"
            android:text="模拟登陆"
            android:textColor="@color/black"
            android:textSize="24mm" />

        <Button
            android:id="@+id/btn_list"
            android:layout_width="match_parent"
            android:layout_height="60mm"
            android:layout_marginHorizontal="20mm"
            android:background="@color/grey_9f9f9f"
            android:text="模拟加载列表"
            android:textColor="@color/black"
            android:textSize="24mm" />

        <Button
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="60mm"
            android:layout_marginHorizontal="20mm"
            android:layout_marginTop="20mm"
            android:background="@color/grey_9f9f9f"
            android:text="下载"
            android:textColor="@color/black"
            android:textSize="24mm" />

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20mm"
            android:layout_marginTop="20mm"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="28mm" />

    </LinearLayout>

</layout>
