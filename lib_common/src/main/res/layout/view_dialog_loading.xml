<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.common.widget.ProgressWheel
            android:id="@+id/progress"
            android:layout_width="160mm"
            android:layout_height="160mm"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40mm"
            wheel:matProg_barColor="@color/blue_2e60df"
            wheel:matProg_progressIndeterminate="true" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210mm"
            android:layout_marginBottom="20mm"
            android:gravity="center"
            android:paddingHorizontal="50mm"
            android:text="@string/label_loading"
            android:textColor="@color/blue_2e60df"
            android:textSize="26mm" />

    </FrameLayout>

</layout>