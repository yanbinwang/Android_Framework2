<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320pt"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_default">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingHorizontal="5pt"
            android:paddingTop="24pt"
            android:singleLine="true"
            android:text="切换服务器"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24pt"
            android:layout_marginTop="16pt"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_scheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_server"
                    android:layout_alignBottom="@+id/tv_server"
                    android:layout_marginRight="-2pt"
                    android:gravity="center_vertical"
                    android:text="http://"
                    android:textColor="@color/textPrimary"
                    android:textSize="14pt" />

                <EditText
                    android:id="@+id/tv_server"
                    android:layout_width="140pt"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_middle"
                    android:layout_toRightOf="@+id/tv_scheme"
                    android:gravity="center"
                    android:hint="服务器"
                    android:inputType="textVisiblePassword"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/textSize14" />

                <TextView
                    android:id="@+id/tv_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_server"
                    android:layout_alignBottom="@+id/tv_server"
                    android:layout_toLeftOf="@+id/tv_port"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/textSize14" />

                <EditText
                    android:id="@+id/tv_port"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_end"
                    android:gravity="center"
                    android:hint="端口"
                    android:inputType="number"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/textSize14" />

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_server"
                    android:layout_alignBottom="@+id/tv_server"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="/"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/textSize14" />
            </RelativeLayout>

            <EditText
                android:id="@+id/tv_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:gravity="center"
                android:hint="额外路径"
                android:inputType="textVisiblePassword"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/textSize14" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:gravity="center"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/textSize10" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="13pt"
                android:orientation="vertical"
                android:paddingHorizontal="20pt" />

            <View style="@style/LineWidth" />

        </LinearLayout>

        <View
            android:id="@+id/view_split_line"
            style="@style/LineConstraintWidth"
            android:layout_marginTop="24pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_root" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0pt"
            android:layout_height="48pt"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingHorizontal="5pt"
            android:singleLine="true"
            android:text="取消"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textSize14"
            app:layout_constraintEnd_toStartOf="@+id/tv_sure"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_split_line" />

        <View
            android:id="@+id/view_line"
            style="@style/LineConstraintHeight"
            app:layout_constraintBottom_toBottomOf="@id/tv_sure"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_sure" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0pt"
            android:layout_height="48pt"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingHorizontal="5pt"
            android:singleLine="true"
            android:text="确定"
            android:textColor="@color/appTheme"
            android:textSize="@dimen/textSize14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_cancel"
            app:layout_constraintTop_toBottomOf="@+id/view_split_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>