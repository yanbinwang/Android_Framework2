<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.mvvm.bridge.MainViewModel" />

        <variable
            name="event"
            type="com.example.mvvm.activity.MainActivity.PageEvent" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60mm"
            android:layout_margin="20mm"
            android:background="@color/gray_9f9f9f"
            android:onClick="@{(v)->event.onClickListener.onClick(v)}"
            android:text="模拟登陆"
            android:textColor="@color/black"
            android:textSize="24mm" />

        <Button
            android:id="@+id/btn_list"
            android:layout_width="match_parent"
            android:layout_height="60mm"
            android:layout_marginHorizontal="20mm"
            android:background="@color/gray_9f9f9f"
            android:onClick="@{(v)->event.onClickListener.onClick(v)}"
            android:text="模拟加载列表"
            android:textColor="@color/black"
            android:textSize="24mm" />

    </LinearLayout>

</layout>
