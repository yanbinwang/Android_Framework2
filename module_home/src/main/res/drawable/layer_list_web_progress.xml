<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>

            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/grey_9f9f9f"
                android:endColor="@color/grey_cccccc"
                android:startColor="@color/grey_6c6c6c" />

        </shape>

    </item>

    <item android:id="@android:id/progress">
        <clip>

            <shape>

                <corners android:radius="2dp" />

                <gradient
                    android:centerColor="@color/blue_3e78f1"
                    android:endColor="@color/blue_3259e1"
                    android:startColor="@color/blue_2e60df" />

            </shape>

        </clip>

    </item>

</layer-list>