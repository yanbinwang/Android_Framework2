<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ClearBtnEditText">
        <attr name="android:minHeight" format="dimension" />
        <attr name="text" format="reference" />
        <attr name="hint" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textColorHint" format="color" />
        <attr name="maxLength" format="integer" />
        <attr name="minLine" format="integer" />
        <attr name="maxLine" format="integer" />
        <attr name="disabled" format="boolean" />
        <attr name="clearBtnImage" format="reference" />
        <attr name="gravity" format="flags">
            <flag name="left" value="3" />
            <flag name="right" value="5" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
            <flag name="top" value="48" />
            <flag name="bottom" value="80" />
            <flag name="center_vertical" value="16" />
            <flag name="center_horizontal" value="1" />
            <flag name="center" value="17" />
        </attr>
        <attr name="inputType" />
        <attr name="imeOptions" />
    </declare-styleable>

</resources>