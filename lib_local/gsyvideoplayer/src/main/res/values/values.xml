<resources>
    <color name="bottom_container_bg">#99000000</color>
    <color name="style_color">#005fff</color>
    <dimen name="brightness_icon">40dp</dimen>
    <dimen name="seek_bar_image">150dp</dimen>
    <dimen name="video_progress_dialog_margin_top">80dp</dimen>
    <dimen name="video_volume_dialog_margin_left">24dp</dimen>
    <item name="ad_full_id" type="id"/>
    <item name="ad_small_id" type="id"/>
    <item name="full_id" type="id"/>
    <item name="small_id" type="id"/>
