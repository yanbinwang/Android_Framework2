<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        statusBar_padding="@{true}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10pt">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="USB:"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textSize18" />

        <TextView
            android:id="@+id/tv_connect"
            android:layout_width="0dp"
            android:layout_height="48pt"
            android:layout_marginTop="5pt"
            android:background="@drawable/shape_r5_blue"
            android:gravity="center"
            android:text="连接"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/textSize14"
            app:layout_constraintEnd_toStartOf="@id/tv_send"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="0dp"
            android:layout_height="48pt"
            android:layout_marginStart="5pt"
            android:background="@drawable/shape_r5_blue"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/textSize14"
            app:layout_constraintEnd_toStartOf="@id/tv_disconnect"
            app:layout_constraintStart_toEndOf="@id/tv_connect"
            app:layout_constraintTop_toTopOf="@id/tv_connect" />

        <TextView
            android:id="@+id/tv_disconnect"
            android:layout_width="0dp"
            android:layout_height="48pt"
            android:layout_marginStart="5pt"
            android:background="@drawable/shape_r5_blue"
            android:gravity="center"
            android:text="断开"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/textSize14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_send"
            app:layout_constraintTop_toTopOf="@id/tv_connect" />

        <TextView
            android:id="@+id/tv_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:text="内容："
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textSize18"
            app:layout_constraintTop_toBottomOf="@id/tv_send" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:layout_marginTop="5pt"
            android:background="@drawable/shape_default"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textHint"
            app:layout_constraintTop_toBottomOf="@id/tv_label2" />

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textSize14"
            app:layout_constraintTop_toBottomOf="@id/et_content"
            tools:text="------" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
