<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320pt"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_default"
        android:paddingTop="8pt">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingHorizontal="5pt"
            android:paddingTop="18pt"
            android:singleLine="true"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="标题" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0pt"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24pt"
            android:layout_marginTop="16pt"
            android:gravity="center"
            android:lineSpacingExtra="2pt"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textSize14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="内容" />

        <View
            android:id="@+id/view_controller_line"
            style="@style/LineConstraintWidth"
            android:layout_marginTop="16pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_message" />

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="0pt"
            android:layout_height="48pt"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingHorizontal="5pt"
            android:singleLine="true"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/textSize14"
            app:layout_constraintEnd_toStartOf="@+id/tv_positive"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_controller_line"
            tools:text="取消" />

        <View
            android:id="@+id/view_line"
            style="@style/LineConstraintHeight"
            app:layout_constraintBottom_toBottomOf="@id/tv_positive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_positive" />

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="0pt"
            android:layout_height="48pt"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingHorizontal="5pt"
            android:singleLine="true"
            android:textColor="@color/appTheme"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/tv_negative"
            app:layout_constraintTop_toBottomOf="@+id/view_controller_line"
            tools:text="确定" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>