<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <data>

        <variable
            name="adapter"
            type="com.example.debugging.adapter.LogAdapter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgDefault">

        <com.example.common.widget.xrecyclerview.XRecyclerView
            android:id="@+id/xrv_list"
            quick_adapter="@{adapter}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="44pt" />

        <View
            style="@style/LineWidth"
            android:layout_gravity="bottom"
            android:layout_marginBottom="44pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44pt"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_server"
                android:layout_width="0pt"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="middle"
                android:gravity="start|center_vertical"
                android:maxLines="1"
                android:paddingHorizontal="15pt"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/textSize14"
                tools:text="https://www.baidu.com" />

            <View
                style="@style/LineHeight"
                android:layout_marginVertical="5pt" />

            <TextView
                android:id="@+id/tv_insert"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15pt"
                android:text="添加"
                android:textColor="@color/appTheme"
                android:textSize="@dimen/textSize14"
                android:textStyle="bold" />

            <View
                style="@style/LineHeight"
                android:layout_marginVertical="5pt" />

            <TextView
                android:id="@+id/tv_refresh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15pt"
                android:text="刷新"
                android:textColor="@color/appTheme"
                android:textSize="@dimen/textSize14"
                android:textStyle="bold" />

            <View
                style="@style/LineHeight"
                android:layout_marginVertical="5pt" />

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="15pt"
                android:text="复位"
                android:textColor="@color/appTheme"
                android:textSize="@dimen/textSize14"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</layout>