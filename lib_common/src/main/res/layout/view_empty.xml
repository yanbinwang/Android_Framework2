<?xml version="1.0" encoding="utf-8"?><!-- 当列表为空或者没有网络时显示 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="480pt"
            android:layout_height="450pt"
            android:layout_marginBottom="30pt"
            tools:src="@mipmap/img_data_error" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30pt"
            android:textStyle="bold"
            tools:text="页面加载失败，请重试" />

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="120pt"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:background="@drawable/shape_empty_btn"
            android:gravity="center"
            android:paddingVertical="10pt"
            android:text="刷新"
            android:textColor="@color/black"
            android:textSize="18pt" />

    </LinearLayout>

</layout>