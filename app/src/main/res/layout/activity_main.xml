<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_funds_bg"
            android:layout_width="match_parent"
            android:layout_height="164pt"
            android:scaleType="fitXY"
            android:src="@mipmap/img_funds" />

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableLoadMore="false"
            app:srlEnableRefresh="true">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_funds"
                        android:layout_width="match_parent"
                        android:layout_height="164pt"
                        android:orientation="vertical"
                        android:paddingHorizontal="15pt">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12pt"
                            android:text="Total assets converted(USDT)"
                            android:textColor="@color/grey_a8a5a5"
                            android:textSize="12pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2pt"
                            android:text="232,232,212.00"
                            android:textColor="@color/grey_333333"
                            android:textSize="28pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3pt"
                            android:text="≈ ₹0.00"
                            android:textColor="@color/grey_a8a5a5"
                            android:textSize="15pt" />

                        <View
                            android:id="@+id/view_content"
                            android:layout_width="match_parent"
                            android:layout_height="38pt"
                            android:layout_marginTop="15pt"
                            android:background="@color/blue_1566ec" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="800pt"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="底部内容"
                        android:textColor="@color/white"
                        android:textSize="29pt" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    </FrameLayout>

</layout>
